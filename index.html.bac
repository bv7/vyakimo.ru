  <!-- Контент -->
  <main>
    <!-- Герой-секция -->
    <section id="hero" class="hero-section">
      <div class="hero-container">
        <div class="hero-inner">
          <img src="/assets/hero-bg.webp" alt="Фотограф Виталий Якимов" class="hero-image">
          <div class="hero-content">
            <h1>Vitale Yakimо</h1>
            <p class="hero-subtitle">Эмоциональные истории через объектив</p>
            <a href="#categories" class="hero-btn">Посмотреть портфолио</a>
